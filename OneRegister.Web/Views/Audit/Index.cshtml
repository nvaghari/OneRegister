@model OneRegister.Web.Models.Audit.LogViewModel
@{ ViewData["Title"] = "LogManagement"; }

@section Styles{
    @{await Html.RenderPartialAsync("_DataTableStyles"); }
}
<h4 class="text-primary">Logs</h4>
<div class="row">
    <div class="col-md-8">
        <div class="form-group">
            <div class="input-group">
                <select asp-items="Model.FileList" asp-for="FileListId" class="col-md-6 form-control">
                </select>
                <div class="input-group-append">
                    <input id="showLogBtn" class="btn btn-primary" type="button" value="Show" />
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col">
        <table id="logTable" class="table table-striped table-bordered dt-responsive" style="width:100%">
            <thead class="bg-primary text-light">
                <tr>
                    <th>Time</th>
                    <th>Level</th>
                    <th>Message</th>
                    <th>Session</th>
                    <th>RemoteAddress</th>
                    <th>User</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_DataTableScripts"); }
    <script type="text/javascript" src="~/js/general/logList.js" asp-append-version="true"></script>
}