@model OneRegister.Web.Models.MerchantRegistration.MerchantOwnerViewModel
<div class="modal-content">
    <div class="modal-header bg-primary text-light">
        <h5 class="modal-title">Add New Owner/Director</h5>
        <button type="button" class="close text-light" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="container">
            <form id="formOwner">
                <div class="form-row">
                    <div class="col">
                        <div id="ownerAlert" class="d-none"></div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md-6">
                        <form-group-hidden target="OwnerId" />
                        <form-group-input target="OwnerName" />
                        <form-group-select for="OwnerDesignation" list="Model.DesignationList" />
                    </div>
                    <div class="col-md-6">
                        <form-group-input target="OwnerIdentityNo" />
                        <form-group-input target="OwnerMobile" />
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-warning" id="ownerSaveBtn">Save</button>
    </div>
</div>
