@model OneRegister.Web.Models.Account.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-6">
            <div>
                <img width="100%" src="~/pic/billboard/two_factor_authentication.png" />
            </div>
        </div>
        <div class="col-lg-4">
            <div class="mt-lg-5">
                <h2 class="billboard-title-success">Login</h2>
                <hr />
                <div>
                    <form asp-action="Login">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <div class="input-group input-group-lg">
                                <div class="input-group-prepend input-group-text bg-primary">
                                    <i class="fa fa-user text-light"></i>
                                </div>
                                <input asp-for="UserName" class="form-control" placeholder="@Html.DisplayNameFor(m => m.UserName)" />
                            </div>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="input-group input-group-lg">
                                <div class="input-group-prepend input-group-text bg-primary">
                                    <i class="fa fa-passport text-light"></i>
                                </div>
                                <input asp-for="Password" class="form-control" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-block btn-outline-primary">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


