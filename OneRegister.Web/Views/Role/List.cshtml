@model OneRegister.Web.Models.Account.RoleAddViewModel

@{
    ViewData["Title"] = "Roles";
}

@section Styles{
    <link href="~/lib/dataTables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/lib/dataTables/responsive/css/responsive.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/lib/gijgo/combined/css/gijgo.min.css" rel="stylesheet" />
}
<h4 class="text-primary">Role Permissions</h4>

<div class="row mt-3">
    <div class="col">
        <form id="roleForm">
            <div class="form-row">
                <div class="col-md"><ig-text for="Name" icon="fas fa-user-shield" /></div>
                <div class="col-md"><ig-select for="OrganizationId" list="Model.Organizations" icon="fas fa-sitemap" /></div>
                <div class="col-md"><a class="btn btn-primary" id="roleAddBtn" role="button">Add</a></div>
            </div>
        </form>
    </div>
</div>
<div class="row mt-3">
    <div class="col">
        <div>
            <table id="roleListGrid" class="table table-striped table-bordered dt-responsive nowrap w-100">
                <thead class="bg-primary text-light">
                    <tr>
                        <th>Action</th>
                        <th>Id</th>
                        <th>Role Name</th>
                        <th>Organization</th>
                        <th>Number Of Assigned Users</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_DataTableScripts"); }
    <script type="text/javascript" src="~/lib/gijgo/combined/js/gijgo.min.js" ></script>
    <script type="text/javascript" src="~/js/role/roles.js" asp-append-version="true"></script>
}