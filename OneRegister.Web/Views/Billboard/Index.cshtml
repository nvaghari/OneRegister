@model OneRegister.Domain.Model.Shared.Billboard.BillboardModel
@{
    ViewData["Title"] = "You did it Successfully!";
}

<div class="container-fluid">
    <div class="row mt-4">
        <div class="col-lg-6">
            <div>
                <img class="w-100" src="@Model.Photo" alt="@Model.Title" />
            </div>
        </div>
        <div class="col-lg-6">
            <div class="mt-lg-5">
                <h2 class="billboard-title-success">@Model.Title</h2>
                <hr />
                <p>
                    @Model.Text
                </p>
            </div>
            <div class="row mt-5">
                <div class="col-12">
                    <div>
                        <a class="btn btn-outline-primary" href="@Model.Url">Okay! Let's Continue</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

